<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Login / Sign Up Form</title>
    <link rel="shortcut icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="../css/signup.css">
</head>

<body>
    <!-- Login Form -->
    <div class="container">
        <form class="form" id="login" method="POST" action="/login">
            <h1 class="form__title">Login</h1>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <!-- Username Text Box -->
                <input type="text" id="username" name="username" class="form__input" autofocus placeholder="Username" value="" required>
                <div class="form__input-error-message"></div>
            </div>
            <div class="form__input-group">

                <!-- Password Text Box -->
                <input type="password" id="password" name="password" class="form__input" autofocus placeholder="Password" value="" required>
                <div class="form__input-error-message">{{message}}</div>
            </div>

            <button class="form__button" type="submit">Continue</button>
            <p class="form__text">
                <a href="#" class="form__link">Forgot your password?</a>
            </p>
            
            <!-- Open signup form -->
            <p class="form__text">
                <a class="form__link" href="signup" id="linkCreateAccount">Don't have an account? Create account</a>
            </p>
            <p class="form__text">
                <a class="form__link" href="/" id="GoBack">Go Back</a>
            </p>
        </form>
    </div>
    <!--script src="js/login.js"></script-->
    <script src="../app.js"></script>
</body>
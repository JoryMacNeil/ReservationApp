    </ul>
<!--/header-->



    <div class="center">
     
      <p class="lead">Fill out the form to book your reservation</p>
    </div>
    <div class="row">
      <form id="main-reservation-form" class="contact-form" name="contact-form" method="POST" action="/reservation">
        <div class="col-sm-5 col-sm-offset-1">
          <div class="form-group">
            <label>Name *</label>
            <input type="text" name="name" class="form-control" required id="name">
          </div>
          <div class="form-group">
            <label>Email *</label>
            <input type="email" name="email" class="form-control" required id="email">
          </div>
          <div class="form-group">
            <label>Phone *</label>
            <input type="text" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" class="form-control" id="phone" placeholder="###-###-#### format" required>
          </div>
          <div class="form-group">
            <label>Booking Date/Time *</label>
            <input type="datetime-local" class="form-control" id="date" name="bookFor" required>
            <div class="form__input-error-message">{{message}}</div>
          </div>
        </div>
        <div class="col-sm-5">
          <div class="form-group">
            <label>How many People *</label>
            <input type="number" min="0" name="subject" class="form-control" required id="people" name="custCount">
          </div>
          <div class="col-sm-5">
            <label>Choose a Cafe</label>
            <select id="location" name="location" required>
              <option value="Cafe 1, streetname, ON, A1B 2C3">Cafe 1, streetname, ON, A1B 2C3</option>
              <option value="Cafe 2, roadname, ON, D4E 5F6">Cafe 2, roadname, ON, D4E 5F6</option>
              <option value="Cafe 3, avenuename, ON, G7H 8I9">Cafe 3, avenuename, ON, G7H 8I9</option>
            </select>
          </div>
          <div class="form-group">
            <label>Additional Notes</label>
            <textarea name="message" id="message" name="note" class="form-control" rows="8"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Submit Booking</button>
          </div>
        </div>
      </form>
    </div>

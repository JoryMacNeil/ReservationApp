<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Login / Sign Up Form</title>
    <link rel="shortcut icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="../css/signup.css">
</head>

<body>
    <div class="container">
        <!-- Sign Up Form -->
        <form class="form" id="createAccount" method="POST" action="/signup">
            <h1 class="form__title">Create Account</h1>
            <div class="form__message form__message--error"></div>
            <div class="form__input-group">
                <!-- Create Username Text Box -->
                <input type="text" id="createUsername" name="username" class="form__input" autofocus placeholder="Username" value="" required>
                <div class="form__input-error-message">{{userMessage}}</div>
            </div>

            <!-- Add Email Text Box -->
            <div class="form__input-group">
                <input type="email" id="email" name="email" class="form__input" autofocus placeholder="Email Address" value="" required>
                <div class="form__input-error-message"></div>
            </div>

            <!-- Create Password Text Box -->
            <div class="form__input-group">
                <input type="password" id="createPassword" name="password" class="form__input" autofocus placeholder="Password" required>
                <div class="form__input-error-message"></div>
            </div>

            <!-- Check Password Text Box -->
            <div class="form__input-group">
                <input type="password" id="checkPassword" name="checkPassword" class="form__input" autofocus placeholder="Confirm password" required>
                <div class="form__input-error-message"></div>
            </div>

            <button class="form__button" type="submit" href="/">Continue</button>
            <p class="form__text">
                <a class="form__link" href="login" id="linkLogin">Already have an account? Sign in</a>
            </p>
        </form>
    </div>
    <script src="../js/signup.js"></script>
    <script src="../app.js"></script>
</body>